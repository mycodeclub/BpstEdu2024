@model BpstEducation.Models.UpdateEmailVM
@{
    ViewData["Title"] = "ChangeEmail";
    Layout = ViewBag.Layout; 
    ViewBag.ActiveTabName = "ChangeEmail";

}

<h3>Change Password</h3>

<div class="content">
    <div class="card">
        <div class="card-body">
            <form asp-controller="Account" asp-action="ChangeEmail" method="post">
                <div class="form-group row">
                    <label asp-for="OldEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input readonly="readonly" asp-for="OldEmail">
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="NewEmail" class="col-sm-2 col-form-label"> New Email</label>
                    <div class="col-sm-10">
                        <input asp-for="NewEmail">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>

                    <div class="col-sm-10">
                        <input asp-for="Password">
                    </div>
                </div>
                <div class="col-sm-10">

                    <button type="Submit" class="btn btn-primary">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

