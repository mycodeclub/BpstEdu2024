@model BpstEducation.Models.UpdatePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = ViewBag.Layout;
    ViewBag.ActiveTabName = "ChangePassword";
}

<h3>Change Password</h3>
<div class="content">
    <div class="card">
        <div class="card-body">
            <form asp-controller="Account" asp-action="ChangePassword" method="post">

                <div class="form-group row">
                    <label asp-for="NewEmail" class="col-sm-2 col-form-label">NewEmail</label>
                    <div class="col-sm-10">
                        <input readonly="readonly" asp-for="NewEmail">
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="OldPassword" class="col-sm-2 col-form-label">OldPassword</label>
                    <div class="col-sm-10">
                        <input asp-for="OldPassword">
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="NewPassword" class="col-sm-2 col-form-label">PasNewPasswordsword</label>

                    <div class="col-sm-10">
                        <input asp-for="NewPassword">
                    </div>
                </div>
                <div class="col-sm-10">

                    <button type="Submit" class="btn btn-primary">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

