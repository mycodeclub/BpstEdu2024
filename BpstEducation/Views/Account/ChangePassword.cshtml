@model BpstEducation.Models.UpdatePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = ViewBag.Layout;
    ViewBag.ActiveTabName = "ChangePassword";
}
<div class="content">
    <div class="card">
        <div class="card-body">
            <h5>Change Password</h5>
            <hr />
            <form asp-controller="Account" asp-action="ChangePassword" method="post">
                <div class="row">
                    <div class="form-group col-md-4 col-sm-6 col-lg-3">

                        <label asp-for="NewEmail"></label>
                        <input asp-for="NewEmail" />
                        <span asp-validation-for="NewEmail"></span>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-lg-3">
                        <label asp-for="OldPassword"></label>
                        <input asp-for="OldPassword" />
                        <span asp-validation-for="OldPassword"></span>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-lg-3">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" />
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

