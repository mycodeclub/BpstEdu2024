@model BpstEducation.Models.Student

@{
    ViewData["Title"] = "Create Student";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
    List<BpstEducation.Models.Batch> Batches = ViewBag.Batches;
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center fw-bold fs-4">
            Student Registration
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>

                <!-- Validation Summary -->
                <div class="alert alert-danger" asp-validation-summary="All"></div>

                <div class="row g-3">
                    <input type="hidden" asp-for="UniqueId" />

                    <div class="col-md-6">
                        <label asp-for="RegistrationDate" class="form-label fw-bold">Registration Date</label>
                        <input asp-for="RegistrationDate" type="date" class="form-control" required />
                        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" required />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" required pattern="[6-9]\d{9}" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="AadhaarNumber" class="form-label fw-bold">Aadhaar Number</label>
                        <input asp-for="AadhaarNumber" class="form-control" placeholder="Enter Aadhaar Number" required pattern="\d{12}" />
                        <span asp-validation-for="AadhaarNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PanNumber" class="form-label fw-bold">PAN Number</label>
                        <input asp-for="PanNumber" class="form-control" placeholder="Enter PAN Number" required pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" />
                        <span asp-validation-for="PanNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SelectedBatchId" class="form-label fw-bold">Select Batch</label>
                        <select asp-for="SelectedBatchId" class="form-select">

                            @if (Batches != null && Batches.Any())
                            {
                                @foreach (var item in Batches)
                                {
                                    string batch = $"{item?.Course?.Name} - {item.RemaningDays} Days - {item.StartDateTime:dd-MMM-yyyy hh:mm tt}";
                                    <option value="@item.UniqueId">@batch</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="card mt-4 border-0">
                        <div class="card-header bg-light fw-bold">Address Details</div>
                        <div class="card-body row g-3">
                            <div class="col-md-6">
                                <label asp-for="Address.AddressLine1" class="fw-bold">Address</label>
                                <input asp-for="Address.AddressLine1" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address.NearestLandMark" class="fw-bold">Landmark (Optional)</label>
                                <input asp-for="Address.NearestLandMark" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address.PinCode" class="fw-bold">Pin Code</label>
                                <input asp-for="Address.PinCode" class="form-control" required pattern="\d{6}" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary btn-lg mt-3">Register Student</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
