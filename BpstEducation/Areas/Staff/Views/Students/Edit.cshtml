@model BpstEducation.Models.Students

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";

}



<h2>Students</h2>
<div class="content">
    <div class="card">
        <div class="card-body">


            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UniqueId" />

                <div class="row">
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="AadhaarNumber" class="control-label"></label>
                        <input asp-for="AadhaarNumber" class="form-control" />
                        <span asp-validation-for="AadhaarNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="PanNumber" class="control-label"></label>
                        <input asp-for="PanNumber" class="form-control" />
                        <span asp-validation-for="PanNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="AadharName" class="control-label"></label>
                        <input asp-for="AadharName" class="form-control" />
                        <span asp-validation-for="AadharName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="PanName" class="control-label"></label>
                        <input asp-for="PanName" class="form-control" />
                        <span asp-validation-for="PanName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="CourseCategoryID" class="control-label"></label>
                        <select asp-for="CourseCategoryID" class="form-control" asp-items="ViewBag.CourseCategoryID"></select>
                        <span asp-validation-for="CourseCategoryID" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <label asp-for="MyTrainingFee" class="control-label"></label>
                        <input asp-for="MyTrainingFee" class="form-control" />
                        <span asp-validation-for="MyTrainingFee" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 col-md-4 col-lg-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>

        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

