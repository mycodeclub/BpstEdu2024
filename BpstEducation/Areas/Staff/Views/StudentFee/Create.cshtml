@model BpstEducation.Models.StudentFee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h1 class="mb-4 text-center">Student Fee Stucture</h1>
<div class="content">
    <div class="Container">

        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <form asp-action="Create" asp-controller="StudentFee" class="needs-validation" >
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                <input type="hidden" asp-for="StudentId" />
                                
                                <div class="form-group mb-3">
                                    <label asp-for="SubmittedFee" class="form-label"></label>
                                    <input asp-for="SubmittedFee" class="form-control" placeholder="SubmittedFee" />
                                    <span asp-validation-for="SubmittedFee" class="text-danger"></span>
                                </div>
                               
                                <div class="form-group mb-3">
                                    <label asp-for="FeeSubmittingDate" class="form-label"></label>
                                    <input asp-for="FeeSubmittingDate" class="form-control" placeholder="FeeSubmittingDate" />
                                    <span asp-validation-for="FeeSubmittingDate" class="text-danger"></span>
                                </div> 
                                <div class="form-group mb-3">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


