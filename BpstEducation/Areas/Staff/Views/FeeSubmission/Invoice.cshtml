@model BpstEducation.Models.BatchStudent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background: #eee;
            margin: 20px;
        }

        .invoice-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .invoice-logo img {
            max-width: 100px;
        }

        .invoice-details {
            background-color: #f5f5f5;
            padding: 15px;
            border-radius: 4px;
        }

        .table-responsive {
            overflow-x: auto;
        }
        @@media print {
            body

        {
            background: white;
            margin: 0;
            padding: 20px;
        }

        .btn {
            display: none;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="invoice-container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="invoice-logo">
                                <img src="~/images/bpst_logo.png" alt="Invoice logo">
                            </div>
                        </div>
                        <div class="col-lg-6 text-lg-end">
                            <ul class="list-unstyled">
                                <li><strong>BitProSoftTech Software Education</strong></li>
                                <li>3rd Floor Sahai Complex, Near IIM Tiraha, Lucknow</li>
                                <li>Email: edu.bitprosofttech@gmail.com</li>
                                <li>Phone: +91-82-9910-1616</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 invoice-details">
                            <ul class="list-unstyled mb-0">
                                <li><strong>Invoice #:</strong> BPST-@(Model?.BatchId ?? 0)</li>
                                <li><strong>Invoice Date:</strong> @(Model?.CreatedDate?.ToString("MMMM dd yyyy hh:mm tt"))</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><strong>Student Details</strong></li>
                                <li><strong>Name:</strong> @(Model?.Student?.FullName)</li>
                                <li><strong>ID:</strong> @(Model?.StudentId)</li>
                                <li><strong>Batch:</strong> @(Model?.Batch?.Course?.Name)</li>
                                <li><strong>Unique ID:</strong> @(Model?.UniqueId)</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">Description</th>
                                        <th class="text-center">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Course Fee</td>
                                        <td class="text-center">@Model?.TotalFees</td>
                                    </tr>
                                    <tr>
                                        <td>Discount</td>
                                        <td class="text-center">@Model?.DiscountedFeeAmount</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th class="text-end">Remaining Fee:</th>
                                        <th class="text-center">@Model?.TotalFeesAfterDiscount</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 text-center">
                            <p>
                                <strong>Status:</strong>
                                @if (Model?.RemainingFees == 0)
                                {
                                    <span class="badge bg-success">Fee Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unpaid</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 text-center">
                            <p>
                                Generated on @DateTime.Now.ToString("MMMM dd, yyyy")
                                <a href="#" class="btn btn-secondary ms-2" onclick="window.print();">
                                    <i class="fas fa-print me-1"></i> Print
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12 text-center">
                            <p class="text-muted">
                                This is a System Generated Invoice, It does not require a Signature.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
