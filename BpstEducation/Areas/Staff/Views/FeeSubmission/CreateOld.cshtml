@model BpstEducation.Models.BatchStudent
@{
    Layout = null;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-bs-dismiss="modal">X</button>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form class="needs-validation" asp-action="Create" asp-controller="FeeSubmission" asp-area="Staff" method="post"> 
                <input type="hidden" asp-for="@Model.UniqueId" name="BatchStudentId" />
                <input type="hidden" asp-for="@Model.StudentId"  />
                <input type="hidden" asp-for="@Model.BatchId" />
                <input type="hidden" asp-for="SubmittedFeeList.FirstOrDefault().UniqueId" />
                <input type="hidden" asp-for="SubmittedFeeList.FirstOrDefault().BatchStudentId" />

                <div class="row">

                    <div class="form-group col-md-12">
                        <label asp-for="@Model.RemainingFees" class="form-label"></label>
                        <input asp-for="@Model.RemainingFees" name="SubmittedFeeAmount" class="form-control" placeholder="Fees Amount " />
                        <span asp-validation-for="@Model.RemainingFees" class="text-danger"></span>
                    </div>

                    <div class="form-group col-sm-12">
                        <label asp-for="SubmittedFeeList.FirstOrDefault().Description" class="form-label">Description</label>
                        <textarea asp-for="SubmittedFeeList.FirstOrDefault().Description" class="form-control" rows="5" placeholder="Any Description for fee" />
                        <span asp-validation-for="SubmittedFeeList.FirstOrDefault().Description" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <input type="submit" value="Submit Fee" class="btn btn-primary ">
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
