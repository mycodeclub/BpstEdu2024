@model BpstEducation.Models.StudentFee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Students</h4>
<div class="content">
    <div class="Container">

        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UniqueId" />

                                <div class="form-group">
                                    <label asp-for="SubmittedFee" class="control-label"></label>
                                    <input asp-for="SubmittedFee" class="form-control" />
                                    <span asp-validation-for="SubmittedFee" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FeeSubmittingDate" class="control-label"></label>
                                    <input asp-for="FeeSubmittingDate" class="form-control" />
                                    <span asp-validation-for="FeeSubmittingDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-primary">Back to List</a>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>