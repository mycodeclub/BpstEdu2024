@model BpstEducation.Models.Student

@{
    ViewData["Title"] = "Create Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
    List<BpstEducation.Models.Batch> Batches = ViewBag.Batches;
}

<div class="container-fluid px-5 mt-4">
    <div class="card shadow-lg border-0 rounded-4 w-100">
        <!-- Main Card Header -->
        <div class="card-header bg-primary text-white text-center fw-bold fs-4 rounded-top-4">
            Student Registration
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                <!-- Personal Details Card -->
                <div class="card shadow-sm border-4 rounded-4 mb-4">
                    <div class="card-header bg-light fw-bold text-dark">Personal Details</div>
                    <div class="card-body row g-3 p-4">
                        <input type="hidden" asp-for="UniqueId" />

                        <div class="col-md-3">
                            <label asp-for="RegistrationDate" class="form-label fw-bold text-dark">Registration Date</label>
                            <input asp-for="RegistrationDate" type="date" class="form-control border border-secondary rounded-3" required />
                            <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="FirstName" class="form-label fw-bold text-dark">First Name</label>
                            <input asp-for="FirstName" class="form-control border border-secondary rounded-3" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="LastName" class="form-label fw-bold text-dark">Last Name</label>
                            <input asp-for="LastName" class="form-control border border-secondary rounded-3" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Email" class="form-label fw-bold text-dark">Email</label>
                            <input asp-for="Email" type="email" class="form-control border border-secondary rounded-3" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="DateOfBirth" class="form-label fw-bold text-dark">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control border border-secondary rounded-3" required />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold text-dark">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control border border-secondary rounded-3" required pattern="[6-9]\d{9}" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="AadhaarNumber" class="form-label fw-bold text-dark">Aadhaar Number</label>
                            <input asp-for="AadhaarNumber" class="form-control border border-secondary rounded-3" required pattern="\d{12}" />
                            <span asp-validation-for="AadhaarNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="PanNumber" class="form-label fw-bold text-dark">PAN Number</label>
                            <input asp-for="PanNumber" class="form-control border border-secondary rounded-3" required pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" />
                            <span asp-validation-for="PanNumber" class="text-danger"></span>
                        </div>

                        <!-- Batch Selection -->
                        <div class="col-2">
                            <label asp-for="SelectedBatchId" class="form-label fw-bold">Select Batch</label>
                            <select asp-for="SelectedBatchId" class="form-select border border-secondary rounded-3">
                                <option value="">-- Select Batch --</option> @if (Batches != null && Batches.Any())
                                {
                                    @foreach (var item in Batches)
                                    {
                                        string batch = $"{item?.Course?.Name} - {item.RemainingDays} Days - {item.StartDateTime:dd-MMM-yyyy hh:mm tt}";
                                        <option value="@item.UniqueId">@batch</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="SelectedBatchId" class="text-danger"></span>
                        </div>



                        <!-- Address Section Inside Personal Details Card -->
                        <div class="card shadow-sm border-3 rounded-4 mt-4 w-100">
                            <div class="card-header bg-light fw-bold text-dark">Address Details</div>
                            <div class="card-body row g-3 p-4">
                                <div class="col-md-3">
                                    <label asp-for="Address.AddressLine1" class="form-label fw-bold text-dark">Address</label>
                                    <input asp-for="Address.AddressLine1" class="form-control border border-secondary rounded-3" required />
                                    <span asp-validation-for="Address.AddressLine1" class="text-danger"></span>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="Address.NearestLandMark" class="form-label fw-bold text-dark">Landmark</label>
                                    <input asp-for="Address.NearestLandMark" class="form-control border border-secondary rounded-3" />
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="Address.PinCode" class="form-label fw-bold text-dark">Pin Code</label>
                                    <input asp-for="Address.PinCode" class="form-control border border-secondary rounded-3" required pattern="\d{6}" />
                                    <span asp-validation-for="Address.PinCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm hover-scale">
                        Register Student
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    .hover-scale:hover {
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }

    /* Make all form labels slightly bolder and dark */
    .form-label {
        font-weight: 600; /* thoda bold */
        color: #111; /* dark color */
    }
</style>
