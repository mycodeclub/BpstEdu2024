@model BpstEducation.Models.CodeHelper

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabId = 3;
}
<div class="content">
    <div class="card">
        <div class="card-body">
            <h1 class="text-center">Edit CodeHelper</h1>

            <hr />
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <form asp-action="Edit" class="p-4 border rounded shadow-sm bg-light">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <input type="hidden" asp-for="UniqueId" />
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="SubjectId" class="control-label"></label>
                                        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="Topic" class="control-label"></label>
                                        <input asp-for="Topic" class="form-control" />
                                        <span asp-validation-for="Topic" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="TopicDescription" class="control-label"></label>
                                        <input asp-for="TopicDescription" class="form-control" />
                                        <span asp-validation-for="TopicDescription" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="AnswerLine1" class="control-label"></label>
                                        <input asp-for="AnswerLine1" class="form-control" />
                                        <span asp-validation-for="AnswerLine1" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="AnswerText" class="control-label"></label>
                                        <input asp-for="AnswerText" class="form-control" />
                                        <span asp-validation-for="AnswerText" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="Tags" class="control-label"></label>
                                        <input asp-for="Tags" class="form-control" />
                                        <span asp-validation-for="Tags" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="CreatedDate" class="control-label"></label>
                                        <input asp-for="CreatedDate" class="form-control" />
                                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group">
                                        <label asp-for="LastUpdatedDate" class="control-label"></label>
                                        <input asp-for="LastUpdatedDate" class="form-control" />
                                        <span asp-validation-for="LastUpdatedDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-1">
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 text-center">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                                <div class="col-md-6 text-center">
                                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                </div>
                                

                            </div>
                         
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



