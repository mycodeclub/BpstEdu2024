@model BpstEducation.Models.Registration

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title m-0">Student List</h5>
        </div>

        <div class="row py-3 px-5">
            
            <div class="form-group col-md-6">
                <select asp-for="ApplicationFor" class="form-control" asp-items="ViewBag.ApplicationFor" onchange="StudentRegistration.GetStudentByCourseOrBoardName()">
                    <option value="@ViewBag.nul">--Select Course--</option>
                </select>
                <span asp-validation-for="ApplicationFor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h5 class="card-title m-0">View Student Data</h5>
        </div>
        <div class="card-body row">
            <div class="col-12" id="StudentDiv">
                <h3 class="text-center">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    Search for Students by setting filters.
                </h3>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
        });
    </script>
}



