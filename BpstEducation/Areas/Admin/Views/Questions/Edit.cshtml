            <input type="hidden" asp-for="UniqueId" />
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QustionText" class="control-label"></label>
                <input asp-for="QustionText" class="form-control" />
                <span asp-validation-for="QustionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QustionDescription" class="control-label"></label>
                <input asp-for="QustionDescription" class="form-control" />
                <span asp-validation-for="QustionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerLine1" class="control-label"></label>
                <input asp-for="AnswerLine1" class="form-control" />
                <span asp-validation-for="AnswerLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerLine2" class="control-label"></label>
                <textarea asp-for="AnswerLine2" class="form-control" ></textarea>
                <span asp-validation-for="AnswerLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerObjectJson" class="control-label"></label>
                <input asp-for="AnswerObjectJson" class="form-control" />
                <span asp-validation-for="AnswerObjectJson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
