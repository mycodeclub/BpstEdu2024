@model BpstEducation.Models.Course

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Courses";

}

<div class="container">
    <div class="row justify-content-center"> 
        <div class="col-md-6">
            <div class="card m-5 p-4">
                <div class="card-header">
                    <h3 class="card-title">Courses</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input hidden asp-for="UniqueId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CourseName" class="control-label"></label>
                            <input asp-for="CourseName" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CourseCategoryID" class="control-label"></label>
                            <select asp-for="CourseCategoryID" class="form-control" asp-items="ViewBag.CourseCategoryID"></select>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

