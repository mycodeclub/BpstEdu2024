@model BpstEducation.Models.Batch

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="card">
        <div class="card-body">
            <div>
                <h4>Batch Details</h4>
                <hr />
                <dl class="row">
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.Course)</dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>@Html.DisplayFor(model => model.Course.Name)</dd>
                    </div>
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.Title)</dt>                       
                    </div>
                    <div class="col-sm-10">
                        <dd>@Html.DisplayFor(model => model.Title)</dd>
                    </div>
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.Description)</dt>                       
                    </div>
                    <div class="col-sm-10">
                        <dd>@Html.DisplayFor(model => model.Description)</dd>
                    </div>
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.Trainer)</dt>                       
                    </div>
                    <div class="col-sm-10">
                        <dd>@Html.DisplayFor(model => model.Trainer.FullName)</dd>
                    </div>
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.AssisTrainer)</dt>
                    </div>
                    <div class="col-sm-10">
                        <dd>@Html.DisplayFor(model => model.AssisTrainer)</dd>
                    </div>
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.StartDate)</dt>
                    </div>
                    <div class="col-sm-10">
                        <dd> @Model.StartDate.ToString("dd/MMM/yyyy")</dd>
                    </div>
                    <div class="col-sm-2">
                        <dt> @Html.DisplayNameFor(model => model.Duration)</dt>
                        
                    </div>
                    <div class="col-sm-10">
                        <dd>@Html.DisplayFor(model => model.Duration)</dd>
                    </div>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.UniqueId">Edit</a> 
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
